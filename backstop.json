{
  "id": "app",
  "viewports": [
    {
      "label": "phone-small",
      "width": 320,
      "height": 480
    },
    {
      "label": "phone-big",
      "width": 360,
      "height": 640
    },
    {
      "label": "tablet",
      "width": 1024,
      "height": 768
    },
    {
      "label": "laptop",
      "width": 1440,
      "height": 900
    },
    {
      "label": "desktop",
      "width": 1920,
      "height": 1080
    }
  ],
  "scenarios": [
    {
      "label": "Index page: list",
      "url": "http://localhost:8080",
      "delay": 0,
      "selectors": [
        "ul"
      ],
      "selectorExpansion": true,
      "misMatchThreshold" : 0.1,
      "requireSameDimensions": true
    },
    {
      "label": "Index page: items",
      "url": "http://localhost:8080",
      "delay": 0,
      "selectors": [
        ".wrapper",
        ".item"
      ],
      "selectorExpansion": true,
      "misMatchThreshold" : 0.1,
      "requireSameDimensions": true
    }
  ],
  "paths": {
    "bitmaps_reference": ".screenshots",
    "bitmaps_test": "backstop_data/bitmaps_test",
    "engine_scripts": "backstop_data/engine_scripts",
    "html_report": "backstop_data/html_report",
    "ci_report": "backstop_data/ci_report"
  },
  "report": ["ci"],
  "engine": "chrome",
  "engineFlags": [
    "--headless",
    "--disable-gpu",
    "--no-sandbox"
  ],
  "asyncCaptureLimit": 10,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false
}
